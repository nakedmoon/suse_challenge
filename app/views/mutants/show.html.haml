- model_class = Mutant
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @mutant.name
%p
  %strong= model_class.human_attribute_name(:country) + ':'
  %br
  = @mutant.country
%p
  %strong= model_class.human_attribute_name(:team_id) + ':'
  %br
  = @mutant.team_id


= link_to t('.back', :default => t("helpers.links.back")), mutants_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_mutant_path(@mutant), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), mutant_path(@mutant), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
